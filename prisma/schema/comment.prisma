model Comment {
     id      String @id @unique @default(uuid())
     comment String
     user_id String
     user    User   @relation(fields: [user_id], references: [id])

     video_id String
     video    Video  @relation(fields: [video_id], references: [id])

     createdAt DateTime @default(now())
     updatedAt DateTime @updatedAt
}
